@model IEnumerable<ManufacturingManagementSystem.Models.WorkOrder>

@{
    ViewData["Title"] = "Заказы";
}

<h2>Заказы</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Продукт</th>
            <th>Количество</th>
            <th>Дата начала</th>
            <th>Ожидаемая дата завершения</th>
            <th>Статус</th>
            <th>Линия</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Product.Name</td>
                <td>@order.Quantity</td>
                <td>@order.StartDate.ToString("g")</td>
                <td>@order.EstimatedEndDate.ToString("g")</td>
                <td>@order.Status</td>
                <td>@(order.ProductionLine != null ? order.ProductionLine.Name : "Не назначена")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-primary">Редактировать</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Создать заказ</a>