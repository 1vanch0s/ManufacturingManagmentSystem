@model ManufacturingManagementSystem.Models.Material

@{
    ViewData["Title"] = "Редактировать материал";
}

<h2>Редактировать материал</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UnitOfMeasure" class="control-label"></label>
        <input asp-for="UnitOfMeasure" class="form-control" />
        <span asp-validation-for="UnitOfMeasure" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MinimalStock" class="control-label"></label>
        <input asp-for="MinimalStock" class="form-control" />
        <span asp-validation-for="MinimalStock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>

<form asp-action="Replenish" asp-route-id="@Model.Id" method="post" style="display:inline;">
    <button type="submit" class="btn btn-success">Пополнить (+50)</button>
</form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}