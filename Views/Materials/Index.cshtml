@model IEnumerable<ManufacturingManagementSystem.Models.Material>

@{
    ViewData["Title"] = "Материалы";
}

<h2>Материалы</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить материал</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Количество</th>
            <th>Единицы измерения</th>
            <th>Минимальный запас</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var material in Model)
        {
            <tr class="@(material.Quantity < material.MinimalStock ? "table-danger" : "")">
                <td>@material.Name</td>
                <td>@material.Quantity</td>
                <td>@material.UnitOfMeasure</td>
                <td>@material.MinimalStock</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@material.Id" class="btn btn-sm btn-secondary">Редактировать</a>
                </td>
            </tr>
        }
    </tbody>
</table>