@model ManufacturingManagementSystem.Models.DTOs.ProductionLineCreateDto

@{
    ViewData["Title"] = "Добавить линию";
}

<h2>Добавить линию</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <input asp-for="Status" class="form-control" value="Stopped" /> <!-- Значение по умолчанию -->
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EfficiencyFactor" class="control-label"></label>
        <input asp-for="EfficiencyFactor" class="form-control" step="0.1" min="0.5" max="2.0" value="1.0" />
        <span asp-validation-for="EfficiencyFactor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CurrentWorkOrderId" class="control-label">Текущий заказ</label>
        <input asp-for="CurrentWorkOrderId" class="form-control" value="" />
        <span asp-validation-for="CurrentWorkOrderId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Создать" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}