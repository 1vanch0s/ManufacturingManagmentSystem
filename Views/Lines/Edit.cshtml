@model ManufacturingManagementSystem.Models.DTOs.ProductionLineUpdateDto

@{
    ViewData["Title"] = "Редактировать линию";
}

<h2>Редактировать линию</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EfficiencyFactor" class="control-label"></label>
        <input asp-for="EfficiencyFactor" class="form-control" step="0.1" min="0.5" max="2.0" />
        <span asp-validation-for="EfficiencyFactor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CurrentWorkOrderId" class="control-label">Текущий заказ</label>
        <select asp-for="CurrentWorkOrderId" class="form-control" asp-items="ViewBag.WorkOrders"></select>
        <span asp-validation-for="CurrentWorkOrderId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}