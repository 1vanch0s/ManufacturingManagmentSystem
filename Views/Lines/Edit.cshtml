@model ManufacturingManagementSystem.Models.ProductionLine

@{
    ViewData["Title"] = "Управление линией";
}

<h2>Управление линией: @Model.Name</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control">
            <option value="Active">Active</option>
            <option value="Stopped">Stopped</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EfficiencyFactor" class="control-label"></label>
        <input asp-for="EfficiencyFactor" class="form-control" type="number" step="0.1" min="0.5" max="2.0" />
        <span asp-validation-for="EfficiencyFactor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Текущий заказ</label>
        <select asp-for="CurrentWorkOrderId" class="form-control">
            <option value="">Нет</option>
            @foreach (var product in ViewBag.Products)
            {
                <option value="@product.Id">@product.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}