@model IEnumerable<ManufacturingManagementSystem.Models.ProductionLine>

@{
    ViewData["Title"] = "Производственные линии";
}

<h2>Производственные линии</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить линию</a>
    <a asp-action="Dashboard" class="btn btn-info ml-2">Перейти к дашборду</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Статус</th>
            <th>Коэффициент эффективности</th>
            <th>Текущий заказ</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model)
        {
            <tr>
                <td>@line.Name</td>
                <td>@line.Status</td>
                <td>@line.EfficiencyFactor</td>
                <td>@(line.CurrentWorkOrderId.HasValue ? line.CurrentWorkOrderId.Value.ToString() : "Нет заказа")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@line.Id" class="btn btn-sm btn-secondary">Редактировать</a>
                    <a asp-action="Schedule" asp-route-id="@line.Id" class="btn btn-sm btn-info ml-2">Расписание</a>
                </td>
            </tr>
        }
    </tbody>
</table>