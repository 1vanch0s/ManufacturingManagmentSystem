@model ManufacturingManagementSystem.Controllers.StartLineModel

@{
    ViewData["Title"] = "Запуск линии";
}

<h2>Запуск линии</h2>

<form asp-action="StartLine" asp-route-id="@Model.LineId" method="post">
    <div class="form-group">
        <label asp-for="ProductId" class="control-label"></label>
        <select asp-for="ProductId" asp-items="Model.Products" class="form-control">
            <option value="">Выберите продукт</option>
        </select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Запустить" class="btn btn-success" />
        <a asp-action="Dashboard" class="btn btn-secondary">Назад</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}