<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ManufacturingManagementSystem</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">ManufacturingManagementSystem</a>
                <div class="navbar-nav">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Главная</a>
                    <a class="nav-link" asp-controller="Materials" asp-action="Index">Материалы</a>
                    <a class="nav-link" asp-controller="Products" asp-action="Index">Продукты</a>
                    <a class="nav-link" asp-controller="Lines" asp-action="Index">Линии</a>
                    <a class="nav-link" asp-controller="Orders" asp-action="Index">Заказы</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>